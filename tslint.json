{
  "extends": ["tslint:recommended", "tslint-plugin-prettier"],
  "linterOptions": {
    "exclude": ["coverage/**", "__mocks__/**"]
  },
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "semicolon": true,
    "no-any": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}